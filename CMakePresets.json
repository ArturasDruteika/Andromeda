{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug-linux-clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/linux-clang-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "release-linux-clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/linux-clang-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/Release",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/Release",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "debug-linux-gcc",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/linux-gcc-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "release-linux-gcc",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/linux-gcc-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/Release",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/Release",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/Release"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "debug-windows",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug",
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "release-windows",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release",
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-debug-linux-clang",
            "configurePreset": "debug-linux-clang",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "build-release-linux-clang",
            "configurePreset": "release-linux-clang",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "build-debug-linux-gcc",
            "configurePreset": "debug-linux-gcc",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "build-release-linux-gcc",
            "configurePreset": "release-linux-gcc",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "build-debug-windows",
            "configurePreset": "debug-windows",
            "configuration": "Debug",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "build-release-windows",
            "configurePreset": "release-windows",
            "configuration": "Release",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ]
}
